<button class="btn" id="messengerBtn" style="position:fixed; right:.3rem; bottom:.3rem;">
	Messenger
</button>

<div id="messengerWindow" class="container-sm card p-0 border-left border-top"
	style="position:fixed; right:0px; bottom:0px; height:34rem; display:none;">
	<button class="btn" id="messengerCloseBtn" style="font-size:1rem;">
		Messenger
	</button>
	<div class="row m-0" style="width:inherit; height:100%;">
		<div class="col m-0 p-0" style="position:relative;">
			<div id="chatArea" class="m-0 p-0 border border-right-1 border-left-0 border-top-0 border-bottom-0 tab-content">
				@* <div id="chatArea" class="tab-content row m-0"></div> *@
			</div>
			<form class="m-0 p-0" id="messengerForm">
				<div class="row m-0 p-0">
					<textarea id="messengerInput" class="col pl-1 pr-1 pt-0 m-0" style="resize: none; font-size: 14px;"
						placeholder="Type a message"></textarea>
					<button id="messengerSendBtn" class="col-2 btn" style="width:20%; font-size:15px;"
						disabled>Send</button>
				</div>
			</form>
		</div>
		<div class="col-5 m-0 p-0">
			<div id="messengerList" class="p-0 m-0 list-group" role="tablist" style="overflow-y: auto;">
			</div>
		</div>
	</div>
</div>