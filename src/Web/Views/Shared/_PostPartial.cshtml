@model Fakebook.Core.Entities.Post

<div class="card card-outline-primary m-1 p-1">
	<div class="Author card-text p-1">
		<a href="Profile/@Model.User.PublicId">@Model.User.FirstName @Model.User.LastName</a>
	</div>
	<div class="bg-faded p-1">
		<div>
			@Model.Text
			<span class="badge badge-pill badge-primary" style="float:right">
				<small>@Model.DatePosted</small>
			</span>
		</div>
	</div>
</div>