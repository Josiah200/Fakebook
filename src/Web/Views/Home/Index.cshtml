@model Fakebook.Web.ViewModels.HomeViewModel

<div class="container-fluid">
	<div class="row">
		<aside class="col-md-4">
			@await Html.PartialAsync("_NewPostPartial", new Post())
		</aside>
		<div class="col-md-8">
			@foreach (var p in Model.Posts)
			{
				<div class="card card-outline-primary m-1 p-1">
					<div class="bg-faded p-1">
						<h4>
							@p.Text
							<span class="badge badge-pill badge-primary" style="float:right">
								<small>@p.DatePosted</small>
							</span>
						</h4>
					</div>
					<div class="card-text p-1">@p.AuthorFirst</div>
					<div class="card-text p-1">@p.AuthorLast</div>
				</div>
			}
		</div>
	</div>
</div>
